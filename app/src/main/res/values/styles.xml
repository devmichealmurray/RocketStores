<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <style name="StandardButton">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/standard_button_background</item>
    </style>

    <style name ="CardText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDkGray</item>
        <item name="android:gravity">left</item>
    </style>

    <style name ="DetailText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name ="AboutText">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>